<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pc.chatting.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="214.5dp"
        android:weightSum="5">

        <ImageView
            android:layout_width="193dp"
            android:layout_height="59.5dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="57dp"
            android:background="@mipmap/sing_logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signbutton"
            android:gravity="center"
            android:text="User Name"
            android:textColor="#9e9494"/>

        <EditText
            android:id="@+id/UserPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/signbutton"
            android:gravity="center"
            android:text="Password"
            android:textColor="#9e9494"/>

        <EditText
            android:id="@+id/UserNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/signbutton"
            android:gravity="center"
            android:text="Nickname"
            android:textColor="#9e9494"/>

        <EditText
            android:id="@+id/UserNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/signbutton"
            android:gravity="center"
            android:text="Phone number"
            android:textColor="#9e9494"/>

        <view
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="24.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="31.5dp"
            android:background="#8f91ec"
            />
    </LinearLayout>

    <Button
        android:id="@+id/SignComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="33.5dp"
        android:background="@drawable/signcomplete"
        android:text="Complete"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />

</LinearLayout>
