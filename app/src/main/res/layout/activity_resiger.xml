<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pc.chatting.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="214.5dp"
        android:weightSum="6">

        <ImageView
            android:layout_width="193dp"
            android:layout_height="59.5dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="57dp"
            android:background="@mipmap/sing_logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signbutton"
            android:gravity="center"
            android:hint="Id"
            android:textColor="#1e1e1e"
            android:textColorHint="#9e9494"
            android:theme="@style/SignUpStyle"/>

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/signbutton"
            android:gravity="center"
            android:hint="Password"
            android:textColor="#1e1e1e"
            android:textColorHint="#9e9494"
            android:theme="@style/SignUpStyle"/>

        <EditText
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/signbutton"
            android:gravity="center"
            android:hint="User Name"
            android:textColor="#1e1e1e"
            android:textColorHint="#9e9494"
            android:theme="@style/SignUpStyle"/>


        <EditText
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/signbutton"
            android:gravity="center"
            android:hint="User Email"
            android:textColor="#1e1e1e"
            android:textColorHint="#9e9494"
            android:theme="@style/SignUpStyle"/>

        <EditText
            android:id="@+id/userPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/signbutton"
            android:gravity="center"
            android:hint="Phone number"
            android:textColor="#1e1e1e"
            android:textColorHint="#9e9494"
            android:theme="@style/SignUpStyle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="24.5dp"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="27.5dp"
            android:background="#8f91ec"
            />
    </LinearLayout>

    <Button
        android:id="@+id/completeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="23.5dp"
        android:background="@drawable/signcomplete"
        android:text="Complete"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />

</LinearLayout>
