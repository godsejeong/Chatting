<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.8dp"
            android:background="@drawable/signuplook"/>

        <View
            android:layout_width="67dp"
            android:layout_height="1dp"
            android:layout_marginRight="7.8dp"
            android:background="@android:color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.3dp"
            android:background="@drawable/signupunlook"/>
        <View
            android:layout_width="67dp"
            android:layout_height="1dp"
            android:layout_marginRight="5.3dp"
            android:background="@android:color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signuplook"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/signUpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73.5dp"
            android:layout_marginRight="73dp"
            android:gravity="center"
            android:hint="Name"
            android:textColorHint="@android:color/white"
            android:theme="@style/loginStyle"/>

        <EditText
            android:id="@+id/signUpPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73.5dp"
            android:layout_marginRight="73dp"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:hint="Phone Number"
            android:textColorHint="@android:color/white"
            android:theme="@style/loginStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        >

        <Button
            android:id="@+id/signUpTwoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signbutton"
            android:text="back"
            android:textColor="@android:color/white"/>

        <Button

            android:id="@+id/signUpTwoNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/signbutton"
            android:text="next"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>