<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfe"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.pc.chatting.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/topshape"
            android:layout_marginBottom="11dp"
            android:layout_gravity="right"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/welcome"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/downshape"
            android:layout_marginTop="39dp"
            android:layout_gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="6">

        <EditText
            android:id="@+id/loginName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="73.5dp"
            android:layout_marginRight="73dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Id"
            android:theme="@style/loginStyle"/>

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="73.5dp"
            android:layout_marginRight="73dp"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:theme="@style/loginStyle"/>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="62.5dp"
            android:layout_marginRight="61.5dp"
            android:layout_marginTop="39dp"
            android:layout_weight="1.3"
            android:background="@drawable/loginbutton"
            android:text="Sign In"
            android:textColor="@android:color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.7"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Donâ€™t have an account yet?"/>

            <TextView
                android:id="@+id/signUpBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Sign up"
                android:textColor="#505050"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
